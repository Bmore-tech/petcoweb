<mvc:View controllerName="com.bmore.portalproveedores.controller.History"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" displayBlock="true" height="100%">
	<Page showHeader="false">
		<content>
			<IconTabBar id="idIconTabBar" select=".onFilterSelect" class="sapUiResponsiveContentPadding">
				
				<content>
					<Table id="productsTable" inset="false" showSeparators="Inner" headerText="Solicitudes" items="{historyModel>/}">
						<headerToolbar>
							<OverflowToolbar width="auto" height="auto" design="Transparent" visible="true" enabled="true">
								<content>
									<ToolbarSpacer width="" />
									<SearchField id="searchConcept" placeholder="Buscar" showSearchButton="true" visible="true" width="auto" search="onFilterConcepts" />
									<OverflowToolbarButton text="Sort" type="Transparent" icon="sap-icon://sort" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="onSortConcepts" />
								</content>
							</OverflowToolbar>
						</headerToolbar> 
						<columns >
							<Column width="12em">
								<Text text="Id de solicitud" />
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="Id - Proveedor" />
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true" hAlign="End">
								<Text text="Folio" />
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
								<Text text="Monto" />
							</Column>
							<Column hAlign="End">
								<Text text="Fecha de creación" />
							</Column>
							<Column hAlign="End">
								<Text text="Concepto en especifico" />
							</Column>
							<Column hAlign="End">
								<Text text="Última modificación" />
							</Column>
							<Column visible="true" hAlign="End">
								<Text text="Estatus" />
							</Column>
						</columns>
						<items>
							<ColumnListItem type="Active" press="handleRowClick">
								<cells>
									<ObjectIdentifier title="{Name}" text="{historyModel>invoiceId}" />
									<Text text="{historyModel>providerId}" />
									<Text text="{historyModel>folio}" />
									<Text text="{historyModel>amount}" />
									<Text text="{historyModel>creationDate}" />
									<Text text="{historyModel>generalConcept}" />
									<Text text="{historyModel>lastModify}" />
									<Text  text="{historyModel>status}"/>

								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
			</IconTabBar>
		</content>
	</Page>
</mvc:View>
