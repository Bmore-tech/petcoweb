<mvc:View
		xmlns="sap.m"
		xmlns:f="sap.f"
		xmlns:tnt="sap.tnt"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:l="sap.ui.layout"
		displayBlock="true"
		height="100%"
		controllerName="com.petco.portalproveedorespetco.controller.Main">


	<tnt:ToolPage id="toolPage" sideExpanded="true">
		<tnt:header>
			
			<tnt:ToolHeader height="50px" width="auto" design="Transparent" visible="true" enabled="true">
				<tnt:content>
					<Button text="" type="Default" icon="sap-icon://menu2" iconFirst="true" width="auto" enabled="true" visible="true" tooltip="Preciona para ver menú" press="onToggleButtonPress"/>
					<ToolbarSpacer width="20px"/>
					<Title text="Portal de Proveedores" titleStyle="Auto" width="auto" textAlign="Begin" visible="true" wrapping="false"/>
					<ToolbarSpacer width=""/>
					<Button icon="sap-icon://bell" type="Transparent">
						<layoutData>
							<OverflowToolbarLayoutData priority="NeverOverflow" />
						</layoutData>
					</Button>
					<Avatar
							displaySize="XS"
							backgroundColor="Accent7"
							initials="JD"
							badgeIcon="sap-icon://edit" />
				</tnt:content>
			</tnt:ToolHeader>
		</tnt:header>


		<tnt:sideContent>
			<tnt:SideNavigation visible="true">
				<tnt:item>
					<tnt:NavigationList width="auto" expanded="true">

						<tnt:items>
							<tnt:NavigationListItem icon="sap-icon://home" expanded="true" hasExpander="true" text="Home" select="navToView('DashBoard')">
								<tnt:items/>
							</tnt:NavigationListItem>
							
							<tnt:NavigationListItem icon="sap-icon://monitor-payments" expanded="true" hasExpander="true" text="CFDI">
								<tnt:items>
									<tnt:NavigationListItem icon="" expanded="true" hasExpander="true" text="Recepción" select="navToView('Reception')">
										<tnt:items/>
									</tnt:NavigationListItem>
									<tnt:NavigationListItem icon="" expanded="true" hasExpander="true" text="Pendientes">
										<tnt:items/>
									</tnt:NavigationListItem>
									<tnt:NavigationListItem icon="" expanded="true" hasExpander="true" text="Borradores">
										<tnt:items/>
									</tnt:NavigationListItem>
									<tnt:NavigationListItem expanded="true" hasExpander="true" text="Rechazados"/>
								</tnt:items>
							</tnt:NavigationListItem>	


							<tnt:NavigationListItem icon="sap-icon://employee-approvals" expanded="true" hasExpander="true" text="Aprobadores">
							<tnt:items>
								<tnt:NavigationListItem icon="" expanded="true" hasExpander="true" text="Aprobar Solicitudes">
									<tnt:items/>
								</tnt:NavigationListItem>					
								</tnt:items>
							</tnt:NavigationListItem>	
							
							<tnt:NavigationListItem icon="sap-icon://manager-insight" expanded="true" hasExpander="true" text="Reportes">
							<tnt:items>
								<tnt:NavigationListItem icon="" expanded="true" hasExpander="true" text="Histórico de facturas">
									<tnt:items/>
								</tnt:NavigationListItem>					
								</tnt:items>
							</tnt:NavigationListItem>	

							<tnt:NavigationListItem icon="sap-icon://course-book" expanded="true" hasExpander="true" text="Catálogos">
							<tnt:items>
								<tnt:NavigationListItem icon="" expanded="true" hasExpander="true" text="Conceptos" 
									select="navToView('Conceps', 'Conceptos')">
									<tnt:items/>
								</tnt:NavigationListItem>	
								<tnt:NavigationListItem icon="" expanded="true" hasExpander="true" text="Sucursales" 
									select="navToView('Subsidiary', 'Datos para Sucursales')">
									<tnt:items/>
								</tnt:NavigationListItem>				
								</tnt:items>
							</tnt:NavigationListItem>
		
						</tnt:items>
					</tnt:NavigationList>
				</tnt:item>
				<tnt:fixedItem/>
				<tnt:footer/>
			</tnt:SideNavigation>
		</tnt:sideContent>

		<tnt:mainContents>
			<OverflowToolbar id="toolTitle" width="auto" height="46px" design="Solid" visible="false">
                <content>
                    <Button id="backButtonToolBar" type="Transparent" icon="sap-icon://nav-back" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"
						press="navToBack()" />
                </content>
				<Label id="labelTitle" />
            </OverflowToolbar>
			<l:VerticalLayout
					class="sapUiContentPadding"
					id="stripContent"
					visible="false"
					width="100%">
			</l:VerticalLayout>
			<l:VerticalLayout
					class="sapUiContentPadding"
					id="viewContent"
					width="100%">
			</l:VerticalLayout>

		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>