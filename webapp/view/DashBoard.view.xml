<mvc:View
		controllerName="com.petco.portalproveedorespetco.controller.DashBoard"
		xmlns="sap.m"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:f="sap.f"
		xmlns:card="sap.f.cards"
		displayBlock="true"
		height="100%">

		<f:Card class="sapUiMediumMargin" width="500px">
			<f:header>
				<HBox alignItems="Center" justifyContent="SpaceBetween">
					<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
						<card:Header
							title="Total de solicitudes:"
							iconSrc="sap-icon://activity-2" />
					</VBox>

					<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
						<NumericContent value="{dashboard>/total}"
										valueColor="None" class="sapUiTinyMargin sapUiSmallMarginEnd"
										press="sayHello()" />
					</VBox>

				</HBox>
			</f:header>
			<f:content>
				<List showSeparators="None">
					<CustomListItem>
						<HBox alignItems="Center" justifyContent="SpaceBetween">
							<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
								<ObjectStatus
										class="sapMObjectStatusLarge"
										icon="sap-icon://message-success"
										state="Success" />
							</VBox>

							<NumericContent value="{dashboard>/approved}" scale="APROBADAS"
											valueColor="Good" class="sapUiTinyMargin sapUiSmallMarginEnd"
											press="sayHello()" />
						</HBox>
					</CustomListItem>
					<CustomListItem>
						<HBox alignItems="Center" justifyContent="SpaceBetween">
							<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
								<ObjectStatus
										class="sapMObjectStatusLarge"
										icon="sap-icon://begin"
										state="Warning" />
							</VBox>

							<NumericContent value="{dashboard>/progress}" scale="En progreso"
											valueColor="Critical" class="sapUiTinyMargin sapUiSmallMarginEnd"
											press="press" />
						</HBox>
					</CustomListItem>
					<CustomListItem>
						<HBox alignItems="Center" justifyContent="SpaceBetween">
							<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
								<ObjectStatus
										class="sapMObjectStatusLarge"
										icon="sap-icon://sap-box"
										state="None" />
							</VBox>

							<NumericContent value="{dashboard>/draft}" scale="Borradores"
											valueColor="Neutral" class="sapUiTinyMargin sapUiSmallMarginEnd"
											press="press" />
						</HBox>
					</CustomListItem>
					<CustomListItem>
						<HBox alignItems="Center" justifyContent="SpaceBetween">
							<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
								<ObjectStatus
										class="sapMObjectStatusLarge"
										icon="sap-icon://error"
										state="Error" />
							</VBox>

							<NumericContent value="{dashboard>/rejected}" scale="Rechazadas"
											valueColor="Error" class="sapUiTinyMargin sapUiSmallMarginEnd"
											press="press" />
						</HBox>
					</CustomListItem>
				</List>
			</f:content>
		</f:Card>

		<Carousel height="400px" width="100%" loop="true" showPageIndicator="true"
				  pageIndicatorPlacement="Bottom"
				  visible="true"
				  pages="{dashboard>/carrucel}"
				  class="sapUiContentPadding">
			<pages>
				<Image src="{dashboard>}" height="500px" width="500px" visible="true" densityAware="false"/>
			</pages>
		</Carousel>

</mvc:View>