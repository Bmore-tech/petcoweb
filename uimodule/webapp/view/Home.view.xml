<mvc:View controllerName="com.bmore.inveweb.controller.Home" displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:unified="sap.ui.unified"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:form="sap.ui.layout.form">
    <Page showHeader="false" showFooter="true" showNavButton="false">
        <content>
			<FlexBox height="100%" alignItems="Center"
				justifyContent="Center">
				<items>
					<Image src="./resources/img/logo.png" mode="Background" width="20rem"
